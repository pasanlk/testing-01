@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}


@if (@Model != null && @Model.ErrorStatusCode == StatusCodes.Status401Unauthorized)
{
    <div class="text-center pp-error-container">
        <h1 class="mt-4 pp-error-number-text">401</h1>
        <h4 class="mt-3 pp-error-msg">Unauthorized</h4>
        <p class="text-muted mt-3 pp-error-sub-msg">Sorry, you are not authorized to view this content. Please contact the administrator for assistance.</p>
        
    </div>
}
else if (@Model != null && @Model.ErrorStatusCode == StatusCodes.Status404NotFound)
{
    <div class="text-center pp-error-container">
        <h1 class="pp-error-number-text">404</h1>
        <h4 class="mt-3 pp-error-msg">This Page Not Found</h4>
        <p class="text-muted mt-3 pp-error-sub-msg">Oops! The page you are looking for does not exist.</p>

        <button class="btn pp-btn pp-btn-primary">Go Back</button>
    </div>

}
else
{
    <div class="text-center pp-error-container">
        <h1 class="mt-4 pp-error-number-text">500</h1>
        <h4 class="mt-3 pp-error-msg">Internal Server Error</h4>
        <p class="text-muted mt-3 pp-error-sub-msg">Why not try refreshing your page? or you can contact <a href="" class="text-muted"><b>Support</b></a></p>
    </div>

}